---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { Image } from 'astro:assets';
import '../../styles/home.css';

// 1. Header: Imagen del servicio local
import heroServiceImg from '../../assets/servicios/animacion-digital.jpg';

const serviceData = {
    title: "Animación Digital y Motion Graphics",
    description: "Damos vida a tus ideas a través del movimiento. Creamos animaciones 2D y 3D, motion graphics y efectos visuales que capturan la atención y explican conceptos complejos de manera simple y atractiva.",
    features: [
        "Animación 2D y 3D",
        "Motion Graphics para redes sociales",
        "Videos explicativos animados",
        "Logos animados (Logo reveal)",
        "Efectos visuales (VFX)"
    ]
};
---

<Layout title={`${serviceData.title} - Qoribex`}>
    <Navbar />
    <main class="pt-20">
        <!-- HEADER -->
        <section class="relative w-full h-[60vh] bg-black flex items-center justify-center overflow-hidden">
            <Image src={heroServiceImg} alt={serviceData.title} class="absolute inset-0 w-full h-full object-cover opacity-60" />
            <div class="relative z-10 text-center px-4">
                <h1 class="text-4xl md:text-6xl font-black text-white mb-4">{serviceData.title}</h1>
                <p class="text-xl text-gray-200 max-w-2xl mx-auto">Innovación en movimiento para tu marca.</p>
            </div>
        </section>

        <!-- CONTENIDO Y VIDEO -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <div>
                        <h2 class="text-3xl font-bold text-[#1F23A3] mb-6">¿Qué ofrecemos?</h2>
                        <p class="text-lg text-gray-700 leading-relaxed mb-6">
                            {serviceData.description}
                        </p>
                        <ul class="space-y-3">
                            {serviceData.features.map(feature => (
                                    <li class="flex items-center gap-3 text-gray-700">
                                        <span class="text-yellow-400 font-bold">✓</span> {feature}
                                    </li>
                            ))}
                        </ul>
                        <div class="mt-8">
                            <a href="https://wa.me/51999999999?text=Hola,%20me%20interesa%20el%20servicio%20de%20Animación%20Digital" target="_blank" class="inline-block bg-[#1F23A3] text-white px-8 py-3 rounded-full font-bold hover:bg-yellow-400 hover:text-[#1F23A3] transition-all shadow-lg">
                                Cotizar Servicio
                            </a>
                        </div>
                    </div>

                    <!-- VIDEO LOCAL (Excepción para este servicio) -->
                    <div class="w-full h-full min-h-[300px] rounded-3xl overflow-hidden shadow-xl bg-black relative group">
                        <video class="w-full h-full object-cover" autoplay loop muted playsinline>
                            <source src="/videos/intro.mp4" type="video/mp4">
                            Tu navegador no soporta el tag de video.
                        </video>
                        <!-- Overlay opcional -->
                        <div class="absolute inset-0 bg-black/10 group-hover:bg-transparent transition-colors"></div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <footer class="bg-[#1F23A3] text-white py-10 text-center">
        <div class="container mx-auto px-4">
            <p>&copy; 2025 Qoribex Agencia Digital.</p>
        </div>
    </footer>
</Layout>