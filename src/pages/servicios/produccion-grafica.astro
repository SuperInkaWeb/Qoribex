---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import { Image } from 'astro:assets';
import '../../styles/home.css';

// 1. Header: Misma imagen del servicio
import heroServiceImg from '../../assets/servicios/produccion-grafica.jpg';

// 2. Detalle: Otra imagen local (Usando una del blog como ejemplo visual)
import detailServiceImg from '../../assets/servicios/detalle-servicios/img-produccion-grafica.png';

const serviceData = {
    title: "Producción Gráfica y Publicitaria",
    description: "Materializamos tus diseños en soportes físicos de alta calidad. Gestionamos la impresión de merchandising, gigantografías, señalética y todo tipo de material POP.",
    features: [
        "Impresión de gran formato (Gigantografías)",
        "Material POP y Merchandising",
        "Señalética corporativa",
        "Brochures, revistas y catálogos",
        "Instalación de viniles y brandeo"
    ]
};
---

<Layout title={`${serviceData.title} - Qoribex`}>
    <Navbar />
    <main class="pt-20">
        <!-- HEADER DEL SERVICIO -->
        <section class="relative w-full h-[60vh] bg-black flex items-center justify-center overflow-hidden">
            <Image src={heroServiceImg} alt={serviceData.title} class="absolute inset-0 w-full h-full object-cover opacity-60" />
            <div class="relative z-10 text-center px-4">
                <h1 class="text-4xl md:text-6xl font-black text-white mb-4">{serviceData.title}</h1>
                <p class="text-xl text-gray-200 max-w-2xl mx-auto">Tu marca, tangible y de alta calidad.</p>
            </div>
        </section>

        <!-- CONTENIDO Y DETALLE -->
        <section class="py-20 bg-white">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                    <div>
                        <h2 class="text-3xl font-bold text-[#1F23A3] mb-6">¿Qué ofrecemos?</h2>
                        <p class="text-lg text-gray-700 leading-relaxed mb-6">{serviceData.description}</p>
                        <ul class="space-y-3">
                            {serviceData.features.map(feature => (
                                    <li class="flex items-center gap-3 text-gray-700"><span class="text-yellow-400 font-bold">✓</span> {feature}</li>
                            ))}
                        </ul>
                        <div class="mt-8">
                            <a href="https://wa.me/51999999999?text=Hola,%20me%20interesa%20Producción%20Gráfica" target="_blank" class="inline-block bg-[#1F23A3] text-white px-8 py-3 rounded-full font-bold hover:bg-yellow-400 hover:text-[#1F23A3] transition-all shadow-lg">Cotizar Servicio</a>
                        </div>
                    </div>

                    <!-- IMAGEN LOCAL DE DETALLE -->
                    <div class="w-full h-full min-h-[300px] rounded-3xl overflow-hidden shadow-xl">
                        <Image src={detailServiceImg} alt="Detalle del servicio" class="w-full h-full object-cover" />
                    </div>
                </div>
            </div>
        </section>
    </main>
    <footer class="bg-[#1F23A3] text-white py-10 text-center"><p>&copy; 2025 Qoribex.</p></footer>
</Layout>